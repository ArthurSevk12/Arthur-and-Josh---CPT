import pygame

class Menu():

    BLACK = (0, 0, 0)
    WHITE = (255, 255, 255)

    size = (1000, 800)
    screen = pygame.display.set_mode(size)

    done = False

    clock = pygame.time.Clock()

    while not done:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                done = True

        screen.fill(WHITE)
        #pygame.draw.line(screen, BLACK, [0, 0], [100, 100], 5)
        pygame.display.flip()

        clock.tick(60)

    pygame.quit()
